@model  WebFig.Models.Account
<link rel="stylesheet" href="~/Content/base.css">
<link rel="stylesheet" href="~/Content/login.css">
<link rel="stylesheet" href="~/Content/responsive.css">
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form">
    <div class="container">
        @* <div class="fb-like"
                 data-share="true"
                 data-width="450"
                 data-show-faces="true">
            </div>*@
        <div class="row">
            <div class="login-item col-lg-6 col-md-12 col-sm-12 col-12 hide-on-mobile-ipad">
                <img width="650px" src="https://vietucnews.net/wp-content/uploads/2017/11/Warning.png" alt="" class="login-img">
            </div>
            <div class="form-login col-lg-6 col-md-12 col-sm-12 col-12">
                <div class="auth-form">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <div class="auth-form__header">
                                <h3 class="auth-form__heading">Đăng Nhập</h3>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="auth-form__group">
                                @Html.LabelFor(model => model.username, "Tên đăng nhập", htmlAttributes: new { @class = "auth-form__title" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "auth-form__input" } })
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                    <div class="auth-form__controls">
                                        <div class="col-md-offset-2 col-md-10">
                                            <a style="color:red">
                                                @ViewData["Loi1"]
                                                @ViewBag.ThongBao
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="auth-form__group">
                                @Html.LabelFor(model => model.password, "Mật khẩu", htmlAttributes: new { @class = "auth-form__title" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "auth-form__input" } })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })

                                    <input type="button" id="showHidePassword" value="Show" />

                                    <a class="forget-pass" style="padding-left:280px" href="@Url.Action("NhapTaiKhoan")">Quên mật khẩu ?</a>
                                    <div class="auth-form__controls">
                                        <div class="col-md-offset-2 col-md-10">
                                            <a style="color:red">
                                                @ViewData["Loi2"]
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="auth-form__controls">
                                <div class="col-md-offset-2 col-md-10">
                                    <a style="color:red">
                                        @ViewData["Loi3"]
                                    </a>
                                </div>
                            </div>
                            <div class="auth-form__controls">
                                <div class=" col-md-10">
                                    <button class="btn btn-check-in" type="submit">Đăng Nhập</button>
                                </div>
                                <div class=" col-md-10">
                                <p>Hoặc</p>
                                <a href="/NguoiDung/DangNhapFacebook" class="btn btn-check-in btn-facebook">
                                    <i class="fa-brands fa-facebook-f"></i> Facebook
                                </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>



<button class="back-to-home btn">
    @Html.ActionLink("Về trang chủ", "Index","UserHome")
</button>

<style>
    #showHidePassword {
        color: white;
        background-color: black;
    }
    .forget-pass  {
        color:black;
        text-decoration: none;
        font-size: 1.4rem;
    }
    .btn-check-in {
        line-height: 40px;
        margin: 5px;
        @*width: 95%;*@
    }
    .auth-form__controls p{
        text-align: center;
        margin-top: 24px;
        font-size: 1.4rem;
        margin-bottom: 12px;

    }
    .back-to-home a {
        font-size: 1.6rem;
        color: white;
        text-decoration: none;
    }
    .btn-facebook {
        background-color: #2374e1;
    }
    </style>